<Window x:Class="vServiceHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Helper for Virtualisation on Windows" Height="281.751" Width="739.735" Icon="swiss_army_knife-50.ico">
    <Grid>
        <TextBox Name="txtMessages"  Margin="10,10,10,66" TextWrapping="Wrap" FontFamily="Courier New" FontSize="11" VerticalScrollBarVisibility="Auto" TextChanged="scrollDown" IsReadOnly="True"/>
        <Button Name="btnAction" Content="please wait while check Services ..." Margin="0,0,10,10" VerticalAlignment="Bottom" Height="51" IsEnabled="False" HorizontalAlignment="Right" Width="239"/>
        <Button Name="btnCheck" Content="check all services" HorizontalAlignment="Left" Margin="10,0,0,10" Width="152" Height="51" Click="checkAllServices" VerticalAlignment="Bottom"/>
        <Button Name="btnInfo" Content="?" HorizontalAlignment="Left" Margin="167,0,0,10" Width="51" Height="51" Click="openInfoWindow" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
